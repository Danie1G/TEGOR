<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_date_wizard_form" model="ir.ui.view">
        <field name="name">date.wizard.form</field>
        <field name="model">date.wizard</field>
        <field name="arch" type="xml">
            <form string="Seleccionar Fecha">
                <sheet>
                    <group>
                        <field name="date_field"/>
                    </group>
                    <footer>
                        <button string="Aplicar" type="object" name="apply_date" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>